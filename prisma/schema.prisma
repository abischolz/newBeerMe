// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Brewery {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  address   String?
  beers     Beer[]
}

model Beer {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  breweryName Brewery? @relation(fields: [breweryId], references: [id])
  breweryId   Int
}
